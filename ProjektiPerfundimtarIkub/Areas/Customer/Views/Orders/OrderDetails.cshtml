@model BuyArt.DomainModels.Order

@{

  ViewBag.Title = "Order Details";
}

<div>
  <br />
  <h2 class="text-center">Order Details</h2>
</div>
<hr />
<br /><br />
<div class="container d-flex justify-content-center">
  @Html.DisplayFor(x => Model)
</div>
<br /> <br />
<div class="container d-flex justify-content-center form-inline">
  @if (Model.OrderStatus != "Delivered")
  {
    <button type="button" data-target="#cancelOrder" data-toggle="modal" class="btn btn-danger">Cancel Order</button>
  }
  &nbsp;
  &nbsp;
  <a href="/Customer/Orders/MyOrders" class="card-link">Back to My Orders</a>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelOrder" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cancel Order?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to cancel the order?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <form action="/Customer/Orders/CancelOrder/@Model.OrderID" id="cancelOrderForm" method="post">
          <button type="submit" class="btn btn-danger">Cancel Order</button>
        </form>
      </div>
    </div>
  </div>
</div>