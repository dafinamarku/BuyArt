@model IEnumerable<BuyArt.DomainModels.ViewModels.RaportViewModel>
@{
    ViewBag.Title = "AdminRaport";
}
<br />
<h2>AdminRaport</h2>
<br />
<hr />
<div class="container">
  @if (Model.Count() == 0)
  {
    <br />
    <div class="text-center">
      0 Raports
    </div>
  }
  else
  {
    <table class="table table-hover">
      <tr>
        <th>@Html.DisplayNameFor(x => x.UserName)</th>
        <th>@Html.DisplayNameFor(x => x.NrOfDeliveredArtworks)</th>
        <th>@Html.DisplayNameFor(x => x.TotalAmountOfMoney)</th>
      </tr>
      @foreach (var i in Model)
      {
        <tr>
          <td>@Html.DisplayFor(x=>i.UserName)</td>
          <td>@Html.DisplayFor(x=>i.NrOfDeliveredArtworks)</td>
          <td>@Html.DisplayFor(x=>i.TotalAmountOfMoney) leke</td>
        </tr>

      }
    </table>
  }
</div>

