@model BuyArt.DomainModels.Style
@{
  ViewBag.Title = "Delete";
}

<br />
<h2>Do you want to delete this style?</h2>
@using (Html.BeginForm("Delete", "Style", FormMethod.Post))
{
  @Html.HiddenFor(m => m.StyleId)
  <div class="container">
    <ul>
      <li>
        @Html.LabelFor(m => m.StyleId):
        @Html.DisplayFor(m => m.StyleId)
      </li>
      <li>
        @Html.LabelFor(m => m.StyleName):
        @Html.DisplayFor(m => m.StyleName)
      </li>
    </ul>

    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", "Style", new { @class = "btn btn-light" })
  </div>
}



