@model BuyArt.DomainModels.Category
@{
  ViewBag.Title = "Edit";
}
<br />
<h2>Edit Category</h2>
<div class="container">
  @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
  {
    @Html.HiddenFor(m => m.CategoryId)
  <div class="form-row">
    <div class="form-group col-md-6">
      @Html.LabelFor(m => m.CategoryName)
      @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
      @Html.ValidationMessageFor(m => m.CategoryName,null,new { @class = "text-danger" })
      <br />
      <button type="submit" class="btn btn-success">Edit</button>
      @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-light" })
    </div>
    <div class="form-group col-md-6">
      @Html.ValidationSummary(null, new { @class="text-danger"})
    </div>
    </div>

    }

  </div>

