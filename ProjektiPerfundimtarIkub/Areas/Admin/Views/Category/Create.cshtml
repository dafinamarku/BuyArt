@model BuyArt.DomainModels.Category

@{
    ViewBag.Title = "Create";
}
<br />
<h2>Create a New Category</h2>
<br />
<div class="container">
  @using (Html.BeginForm("Create", "Category", FormMethod.Post))
  {
  <div class="form-row">
    <div class="col-md-6">
      @Html.LabelFor(m => m.CategoryName)
      @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
      @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
      <br />
      <button type="submit" class="btn btn-success">Create</button>
      @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-light" })
    </div>
    <div class="form-group col-md-6">
      @Html.ValidationSummary(null, new { @class = "text-danger" })
    </div>
  </div>

  }
</div>
