@model BuyArt.DomainModels.Subject
@{
  ViewBag.Title = "Edit";
}
<br />
<h2>Edit @Model.SubjectName</h2>
<div class="container">
  @using (Html.BeginForm("Edit", "Subject", FormMethod.Post))
  {
    @Html.HiddenFor(m => m.SubjectId)
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.SubjectName)
        @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubjectName, null, new { @class = "text-danger" })
        <br />
        <button type="submit" class="btn btn-success">Edit</button>
        @Html.ActionLink("Cancel", "Index", "Subject", new { @class = "btn btn-light" })
      </div>
      <div class="form-group col-md-6">
        @Html.ValidationSummary(null, new { @class = "text-danger" })
      </div>
    </div>

  }

</div>



